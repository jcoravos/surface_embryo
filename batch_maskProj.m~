function [ maskProjCh1, maskProjCh2, maskProj3 ] = batch_maskProj(directory,channels)

    switch channels
        case 3
        [ch1vol,ch2vol,ch3vol] = vol_builder(directory,channels);
        edgeMask = edge_mask(ch1vol,ch2vol,ch3vol)

        maskedVolCh1 = volume_mask(edgeMask,ch1vol);
        maskProjCh1 = mask_projection(maskedVolCh1,ch1vol);


        maskedVolCh2 = volume_mask(edgeMask,ch2vol);
        maskProjCh2 = mask_projection(maskedVolCh2,ch2vol)


        maskedVolCh3 = volume_mask(edgeMask,ch3vol);
        maskProjCh3 = mask_projection(maskedVo3Ch1,ch3vol)
    end
    
end